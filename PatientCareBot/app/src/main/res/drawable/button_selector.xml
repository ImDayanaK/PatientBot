<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" >
        <shape>
            <gradient
                android:startColor="@color/lightblue"
                android:endColor="@color/lightblue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

